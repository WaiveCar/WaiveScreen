#!/bin/bash
#

upgradepost() {
  pkill xinit
  apt install -y plymouth
  cd /home/adorno/WaiveScreen/Linux/fai-config/files
  for i in etc/default/raspi3-firmware etc/kernel/postinst.d/z50-raspi3-firmware usr/share/plymouth/themes/adcast/
  do
    rsync -avP ./${i} /${i}
  done
  plymouth-set-default-theme -R adcast
  reboot
}

eval $1
